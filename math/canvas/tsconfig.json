{
    "compilerOptions": {
      "lib": ["ESNext", "DOM"],
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "Node",
      "noImplicitAny": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "./dist/",
      "downlevelIteration": true
    },
    "include": ["src/**/*"]
}